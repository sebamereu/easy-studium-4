<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e6e6e6"
        app:contentPadding="10dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:letterSpacing="0.03"
                android:text="Ore di studio di"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:letterSpacing="0.03"
                android:text="exam"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:letterSpacing="0.03"
                android:text=":"
                android:layout_marginLeft="3dp"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:letterSpacing="0.03"
                android:text="3"
                android:layout_marginLeft="3dp"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:letterSpacing="0.03"
                android:text="Ore di teoria: "
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hourTeoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="2"
                android:letterSpacing="0.03"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:letterSpacing="0.03"
                android:text="Ore di laboratorio: "
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/hourLaboratorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="1"
                android:letterSpacing="0.03"
                android:textColor="@color/grigioapp"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- <Button
         android:id="@+id/editExam"

         android:layout_width="100sp"
         android:layout_height="50sp"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="18sp"
         android:textColor="@color/celesteapp"/> -->


</RelativeLayout>

